[includeIf "gitdir:~/Developer/"]
    path = ~/.gitconfig-personal
[includeIf "gitdir:~/Desktop/"]
    path = ~/.gitconfig-personal

[includeIf "gitdir:~/work/"]
    path = ~/work/.gitconfig-work

[alias]
	co =                checkout
	st =                status
	ci =                commit
	br =                branch
	publish =           push --set-upstream origin head
	rst =               reset --hard HEAD
	latest =            describe --abbrev=0
	alias =             config --get-regexp alias
	list-authors =      "!$HOME/Developer/dotfiles/git/list-authors"
	pp =                "!$HOME/Developer/dotfiles/git/pull-push"
	la =                list-authors
[pull]
	rebase = true
[init]
	defaultBranch = main
[rebase]
	autosquash = true
[branch]
	sort = committerdate
# git-delta
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    light = false
    line-numbers = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default

